<h2><%= @project %></h2>

<table border>
  <tr>
    <th>Datetime</th>
    <th>Duration (seconds)</th>
    <th>Charge</th>
  </tr>

  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.created_at %></td>
      <td class="number"><%= job.duration %></td>
      <td class="number">$<%= job.charge %></td>
    </tr>
  <% end %>

  <tr>
    <td colspan="2">Total</td>
    <td class="number">$<%= @jobs.map(&:charge).compact.sum %></td>
  </tr>
</table>
