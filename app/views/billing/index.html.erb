<h2><%= @project %></h2>

<% @dates.each do |year, month| %>
  <%= link_to "#{year}/#{month}", project_billing_path(@project.id, year:, month:) %>
<% end %>

<table border>
  <tr>
    <th>Datetime</th>
    <th>Duration (seconds)</th>
    <th>Charge</th>
  </tr>

  <% @billing_report.jobs.each do |job| %>
    <tr>
      <td><%= job.created_at %></td>
      <td class="number"><%= job.duration %></td>
      <td class="number"><%= number_to_currency(job.charge) %></td>
    </tr>
  <% end %>

  <tr>
    <td colspan="2">Total</td>

    <td class="number">
      <%= number_to_currency(@billing_report.jobs.map(&:charge_cents).compact.sum / 100.0) %>
    </td>
  </tr>
</table>
